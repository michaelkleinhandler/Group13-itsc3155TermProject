<table>
  <th>Email</th>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Student?</th>
  <th>Instructor?</th>
  <th>Organization Admin?</th>
  <th>Super Admin</th>
  <th>Approved</th>
  <th>Links</th>

  <% @users.each do |user| %>
    <% if (current_user.uni_id == user.uni_id and current_user.OrgAdmin?) or  current_user.SuperAdmin? %>
      <tr>
        <td><%= user.email%></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.Student? %></td>
        <td><%= user.Instructor? %></td>
        <td><%= user.OrgAdmin? %></td>
        <td>
          <% if user.SuperAdmin? %>
            <%= button_to 'True', togSA_path(user), method: :patch %>
          <% else %>
            <%= button_to 'False', togSA_path(user), method: :patch %>
          <%end %>
        </td>
        <td>
          <% if user.approved? %>
            <%= button_to 'True', togApp_path(user), method: :patch %>
          <% else %>
            <%= button_to 'False', togApp_path(user), method: :patch %>
          <%end %>
        </td>
        <td>
          <%=link_to 'Show', show_user_path(user) %><br>
          <%= link_to 'Edit', admin_edit_path(user) %>

        </td>

      </tr>
  <% end %>
    <%end %>
</table>