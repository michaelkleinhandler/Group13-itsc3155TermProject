<h1>Teacher Portal</h1>
<!--<body>-->
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#All Courses">Courses</a>
  </li>
  <% @courses.each do |c| %>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href=<%="##{c.id}" %>><%= c.title %></a>
    </li>
  <% end %>
</ul>
<div class="tab-content">
  <div class="container-fluid drivers-main tab-pane active" id="All Courses" role="tabpanel">
    <table class="table">
      <thead>
        <th>Title</th>
        <th>Subject</th>
        <th>Course</th>
        <th>Section</th>
        <th>Class ID</th>
        <th>Options</th>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.subject %></td>
            <td><%= course.coursenum %></td>
            <td><%= course.section %></td>
            <td><%= course.id %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %><br>
            <%= link_to 'Delete Course', course_path(course), method: :delete, data:{confirm: 'Are you sure you want to delete this course?'}%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <a>
      <form action="courses/new">
        <input type="submit" value="Create a Course"/>
      </form>
    </a>
  </div>
    <% @courses.each do |c| %>
        <div class="container-fluid drivers-main tab-pane" id=<%= c.id %> role="tabpanel">
          <table class="table">
            <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Banned</th>
            <th>Options</th>
            </thead>
            <tbody>
            <% c.getStudents.each do |s| %>
              <tr>
              <td><%= "#{s.firstName} #{s.lastName}" %></td>
              <td><%= s.email %></td>
<!--              <td><%#= link_to "Ban User", banStudent_path(c.id,s.id) %></td>-->
                <td></td>
                <td><%=link_to 'Unenroll', removeEnrollment_path(c.id, s.id) %></td>
              </tr>
            <%end %>
            </tbody>
          </table>
        </div>
  <% end %>
</div>
